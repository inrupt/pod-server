{
  "env": "node",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "target": "es2015",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true
  },
  "typeRoots": ["./types"],
  "exclude": [
    "test",
    "node_modules",
    "dist"
  ]
}
