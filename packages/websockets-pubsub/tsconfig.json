{
  "env": "node",
  "compilerOptions": {
    "target": "es2015",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "composite": true
  },
  "include": [
    "src"
  ],
  "typeRoots": ["./types"],
  "exclude": [
    "test",
    "node_modules",
    "dist"
  ]
}
